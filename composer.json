{
    "name": "govcms/scaffold-tooling",
    "description": "A variety of standard config, scripts and packages to support GovCMS scaffold.",
    "license": "GPL-2.0-or-later",
    "require": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
        "drupal/chosen_lib": "2.6.0",
        "drupal/clamav": "1.1.0",
        "drupal/console": "^1.0.2",
        "drupal/fast_404": "^2.0@alpha",
        "drupal/lagoon_logs": "^1.0",
        "drupal/redis":"1.1.0",
        "drupal/stage_file_proxy":"1.0.0-alpha3",
        "drush/drush": "^9.0.0",
        "phar-io/manifest": "1.0.1",
        "phar-io/version": "1.0.1",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3",
        "zaporylie/composer-drupal-optimizations": "^1.0",
        "drupal/core-composer-scaffold": "*"
    },
    "bin": [
        "scripts/govcms-audit",
        "scripts/govcms-behat",
        "scripts/govcms-lint",
        "scripts/govcms-lint-distro",
        "scripts/govcms-phpunit",
        "scripts/govcms-vet",
        "scripts/govcms-deploy",
        "scripts/deploy/govcms-backups-preserve",
        "scripts/deploy/govcms-cache-rebuild",
        "scripts/deploy/govcms-config-backup",
        "scripts/deploy/govcms-config-import",
        "scripts/deploy/govcms-db-backup",
        "scripts/deploy/govcms-db-sync",
        "scripts/deploy/govcms-db-update",
        "scripts/deploy/govcms-enable_modules",
        "scripts/deploy/govcms-pre-deploy",
        "scripts/deploy/govcms-pre-deploy-db-update",
        "scripts/deploy/govcms-update_site_alias",
        "scripts/validate/govcms-validate-permissions",
        "scripts/validate/govcms-validate-platform-yml",
        "scripts/validate/govcms-validate-theme-yml",
        "scripts/validate/govcms-yaml_lint",
        "scripts/validate/govcms-module_verify"
    ],
    "extra": {
        "drupal-scaffold": {
            "file-mapping": {
                "[web-root]/sites/default/lagoon.services.yml": "drupal/settings/lagoon.services.yml",
                "[web-root]/sites/default/redis-unavailable.services.yml": "drupal/settings/redis-unavailable.services.yml",
                "[web-root]/sites/default/lagoon.settings.php": "drupal/settings/lagoon.settings.php",
                "[web-root]/sites/default/production.services.yml": "drupal/settings/production.services.yml",
                "[web-root]/sites/default/production.settings.php": "drupal/settings/production.settings.php",
                "[web-root]/sites/default/development.services.yml": "drupal/settings/development.services.yml",
                "[web-root]/sites/default/development.settings.php": "drupal/settings/development.settings.php",
                "[web-root]/sites/default/all.services.yml": "drupal/settings/all.services.yml",
                "[web-root]/sites/default/settings.php": {
                    "mode": "replace",
                    "overwrite": false,
                    "path": "drupal/settings/all.settings.php"
                }
            }
        }
    }
}
